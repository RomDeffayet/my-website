  {# Selected publications #}
  <div class="list-header">
    <h2 class="list-header__title">Selected publications</h2>
    <a class="btn btn--outline btn--sm" href="/publications">View All</a>
  </div>
  {% from "macros/selected_articlelist.njk" import selected_articlelist %}
  {{ selected_articlelist(
  articles = collections.post | reverse,
  show_tags = false,
  limit = undefined
  ) }}
  
</div>
