---
layout: base.njk
section: home

---
<div class="home-page">
	<div class="home-page__bg-square"></div>

  {# Hero #}
  <div class="hero">
    <div class="hero__col">
      <h1 class="hero__title gradient-text">{{ home.title }}</h1>
      {% if home.body %}
        <div class="hero__body"><b>I am a researcher at <a style="text-decoration:none; color:inherit;" href="https://europe.naverlabs.com/">Naver Labs Europe</a>, </br>where I teach robots how to do stuff.</div>
      {% endif %}
    </div>
    <div class="hero__col">
      {% image
        home.image,
        home.image_alt,
        "(min-width: 1024px) 50vw, 100vw",
        "hero__image shadow",
        "eager"
      %}
    </div>
  </div>

